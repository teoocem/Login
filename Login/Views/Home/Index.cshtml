@model Login.Models.User
@{
    ViewData["Title"] = "Home Page";
}




<section class="vh-100">
    <div id="main-content" class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <span class="h1 fw-bold mb-0">Logo</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" method="get" asp-action="LogIn">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                        <div class="form-outline mb-4">
                            <input type="text" id="kullaniciAdi" asp-for="UserName" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example18">Kullanıcı Adı</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" id="Sifre"asp-for="Password" class="form-control form-control-lg" />
                            <label class="form-label" for="form2Example28">Password</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button id="signup"class="btn btn-info btn-lg btn-block" type="button">Sign Up</button>
                            <button id="login" class="btn btn-info btn-lg btn-block">Log in</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">Forgot password?</a></p>
                        

                    </form>
                    
                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="images/img1.jpg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(function(){
        console.log("çalışıyom")
        
        $("button#signup").on("click",function(){
             $.ajax({
                 url : "/Home/SignUp",
                 method : "GET",
                 success : function(data){
                     $("div#main-content").html(data)
                 }
             })
        })
        
    })

</script>

